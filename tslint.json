{
    "extends": "tslint:recommended",
    "rules": {
        "semicolon": [ true, "never" ],
        "trailing-comma": true,
        "no-trailing-whitespace": true,
        "no-console": true,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "curly": true,
        "arrow-parens": false,
        "eofline": true,
        "interface-name": true,
        "no-empty-interface": true,
        "no-namespace": false,
        "member-ordering": false,
        "max-line-length": [
            true,
            {
                "limit": 100,
                "ignore-pattern": "^import |^export {(.*?)}"
            }
        ],
        "object-literal-key-quotes": false,
        "max-classes-per-file": [ true, 1],
        "no-var-requires": false,
        "member-access": false,
        "ban-types": false,
        "no-empty": true,
        "no-consecutive-blank-lines": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ]
    }
}
