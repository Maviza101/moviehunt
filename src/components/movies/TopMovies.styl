.top-movies-container
    padding 2% 7%

    .header-and-search-container
        display flex
        margin-bottom 50px

    .header-container
        flex-grow 3

    .search-btn-container
        display inline-flex
        flex-direction column
        justify-content center
        align-items end
        flex-grow 2

        .search-btn
            color $black

    .top-movies-list-container
        display flex
        flex-wrap wrap

    .loading-animation-container
        display flex
        flex-direction column
        align-items center
        margin-bottom 30px

        .bounce-loader-container
            display inline-block

        .loading-more-msg
            text-align center
            font-size 20px
            line-height 24px

    .no-movies-found-msg
        width 100%
        color #f2f418
        text-align center
        font-size 20px
        line-height 24px

    .end-of-infinite-scroll-msg
        padding 30px 0
        color $ratings-text-color
        text-align center
        font-size 20px
        line-height 24px
        font-style italic

@media $max-width-712-exclusive
    .top-movies-container
        .top-movies-list-container
            justify-content center
