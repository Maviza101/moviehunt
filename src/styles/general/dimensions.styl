$app-gutter-size = 121px
$height-of-navbar = 96px
$height-of-navbar-max-sm-exlusive = $height-of-navbar * 2

/* Screen widths. */
// Extra small screen/phone
$screen-xs = 480px

// Small screen/tablet
$screen-sm = 768px

// Medium screen/desktop
$screen-md = 992px

// Large screen/wide desktop
$screen-lg = 1200px

// Used to generate values. Can only be referenced in this file, unlike
// the $xyz values here.
minw(w)
    "(min-width:" + w +")"

maxw(w)
    "(max-width:" + w +")"

min-max(min-w, max-w)
    minw(min-w) + " and " + maxw(max-w)

// Usage: @media $max-xs.
$max-xs = maxw($screen-xs)
$max-sm = maxw($screen-sm)
$max-md = maxw($screen-md)

$max-xs-exclusive = maxw($screen-xs - 1)
$max-sm-exclusive = maxw($screen-sm - 1)
$max-md-exclusive = maxw($screen-md - 1)
